# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Production Configuration (for Vercel)
# NEXTAUTH_URL=https://your-app-name.vercel.app
# NEXTAUTH_SECRET=your-production-secret-key

# Database Configuration
# Use Supabase Transaction Pooler (port 6543) for better connection management
# Connection pool settings optimized for concurrent users
DATABASE_URL="postgresql://username:myfirstdatabase123@hostname:6543/database_name?pgbouncer=true&connection_limit=5&pool_timeout=10&schema_cache_size=100"
DIRECT_URL="postgresql://username:myfirstdatabase123@hostname:5432/database_name"

# Connection Pool Configuration (Optional - for fine-tuning)
DB_CONNECTION_LIMIT=5
DB_POOL_TIMEOUT=10
DB_SCHEMA_CACHE_SIZE=100

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for password reset and notifications)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@todoapp.com

# Cron Job Authentication
CRON_SECRET=your-secret-token-for-cron-jobs

# Application URL (for email links and cron jobs)
NEXT_PUBLIC_APP_URL=http://localhost:3000